{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"baseUrl": "src",
		"paths": {
			"*": ["*"]
		}
	},
	"include": ["src", "server.ts"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
