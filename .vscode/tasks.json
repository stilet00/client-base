{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Front End",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Run Back End",
            "type": "shell",
            "command": "npm",
            "args": ["run", "serve"],
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Run Sass Watcher",
            "type": "shell",
            "command": "npm",
            "args": ["run", "sass:watch"],
            "isBackground": true,
            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compiling...",
                    "endsPattern": "Compiled successfully."
                }
            },
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Run Both WebClient & Server",
            "command": "echo",
            "dependsOrder": "parallel",
            "dependsOn": ["Run Front End", "Run Back End", "Run Sass Watcher"]
        }
    ]
}
