{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm run dev",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "npm run serve",
            "type": "shell",
            "command": "npm",
            "args": ["run", "serve"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Both WebClient & Server",
            "dependsOn": ["npm run dev", "npm run serve"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
